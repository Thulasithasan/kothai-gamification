{
  "name": "base",
  "version": "1.0.0",
  "description": "Base RESTful APIs",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts | npx pino-pretty",
    "build": "swc src -d dist --log-watch-compilation --copy-files",
    "circular": "npm run build && madge --circular --no-color --no-spinner dist/src/index.js",
    "lint:check": "tsc --noEmit",
    "serve": "node --enable-source-maps dist/src/index.js",
    "start": "npm run build && npm run serve",
    "pretty:fix": "npx prettier --write \"src/**/*.{ts, json}\"",
    "pretty:check": "npx prettier --check ./src",
    "pr": "npm run pretty:fix && npm run lint:check && npm run build && npm run test",
    "test:unit": "jest --passWithNoTests --testPathPattern=tests/unit",
    "test:int": "ENV=test jest --passWithNoTests --testPathPattern=tests/integration",
    "test": "npm run test:unit && npm run test:int",
    "prepare": "husky",
    "script": "npx tsx src/scripts/index.ts",
    "seed": "tsx src/dbs/seeders/initial.seeder.ts"
  },
  "keywords": [
    "nodejs"
  ],
  "author": "Rushanthan",
  "license": "ISC",
  "dependencies": {
    "aws-sdk": "^2.1692.0",
    "bcryptjs": "^2.4.3",
    "bottleneck": "^2.19.5",
    "busboy": "^1.6.0",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.10",
    "express": "^4.21.1",
    "express-session": "^1.18.1",
    "helmet": "^8.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.8.1",
    "nodemailer": "^6.9.16",
    "pino": "^9.5.0",
    "pino-http": "^10.3.0",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "tsoa": "^6.5.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@jest/globals": "^29.7.0",
    "@sendgrid/mail": "^8.1.4",
    "@swc/cli": "^0.5.0",
    "@swc/core": "^1.9.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/busboy": "^1.5.4",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/eslint__js": "^8.42.3",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "@types/nodemailer": "^6.4.16",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.7",
    "eslint": "^9.15.0",
    "globals": "^15.12.0",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.10",
    "mongodb-memory-server": "^10.1.2",
    "pino-pretty": "^13.0.0",
    "prettier": "3.3.3",
    "supertest": "^6.3.4",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "pnpm run circular",
      "pnpm run lint:fix"
    ]
  }
}
